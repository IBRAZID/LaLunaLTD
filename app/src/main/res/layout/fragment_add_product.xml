<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etProductNameAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="151dp"
            android:layout_marginBottom="49dp"
            android:ems="10"
            android:hint="Product Name..."
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/spnrCategoryAddProduct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAddAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:backgroundTint="@color/mainBlue"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etDescriptionAddProduct" />

        <EditText
            android:id="@+id/etDescriptionAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="343dp"
            android:ems="10"
            android:hint="Description..."
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/spnrCategoryAddProduct"
            app:layout_constraintTop_toBottomOf="@+id/spnrCategoryAddProduct" />

        <Spinner
            android:id="@+id/spnrCategoryAddProduct"
            android:layout_width="210dp"
            android:layout_height="0dp"
            android:hint="Category"
            android:layout_marginBottom="51dp"
            app:layout_constraintBottom_toTopOf="@+id/etDescriptionAddProduct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProductNameAddProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>