<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvBillCartFragment"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/mainBlue"
            android:gravity="center"
            android:text="Total:"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCartCartFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tvCheckoutCartFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBillCartFragment" />

        <TextView
            android:id="@+id/tvCheckoutCartFragment"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/mainBlue"
            android:gravity="center"
            android:text="Proceed To Checkout..."
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
